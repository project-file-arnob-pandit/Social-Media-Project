<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Status</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://cdn.jsdelivr.net/npm/remixicon@4.2.0/fonts/remixicon.css" rel="stylesheet" />
    <style>
        /* Add custom styles here if needed */
    </style>
</head>

<body class="bg-gray-900 flex items-center justify-center min-h-screen">
    <div class="bg-cyan-400 rounded-lg shadow-lg p-4 max-w-lg w-full">
        <form action="/status" method="post" class="flex flex-col items-center">
            <!-- Image Input and Upload Button -->
            <div class="relative w-full mb-4">
                <input id="imageinput" name="image" type="text"
                    class="outline-none py-2 px-4 rounded bg-white placeholder-gray-500 w-full"
                    placeholder="Enter image URL...">

                <button id="uploadbtn"
                    class="absolute right-0 top-0 px-4 py-2 bg-white text-gray-800 rounded">Upload</button>
            </div>

            <!-- Image Preview -->
            <div id="imagePreview" class="w-full flex justify-center items-center mb-4">
                <img id="previewImage" class="rounded-lg max-w-full max-h-80" src="" alt="">
            </div>

            <!-- Share Button -->
            <input type="submit" value="Share"
                class="px-6 py-2 bg-white text-gray-800 rounded-lg font-semibold cursor-pointer">
        </form>
    </div>

    <script>
        function showImageInput(event) {
            event.preventDefault();
            let input = document.getElementById("imageinput");
            let uploadbtn = document.getElementById("uploadbtn");
            input.classList.toggle("hidden");
            uploadbtn.classList.toggle("hidden");

            uploadbtn.onclick = function (event) {
                event.preventDefault();
                let imageUrl = input.value.trim();
                if (imageUrl) {
                    document.getElementById("previewImage").src = imageUrl;
                    document.getElementById("previewImage").style.display = 'block';
                } else {
                    document.getElementById("previewImage").src = '';
                }
                input.value = "";
                input.classList.add("hidden");
                uploadbtn.classList.add("hidden");
            };
        }

        document.getElementById("uploadbtn").addEventListener("click", showImageInput);
    </script>
</body>

</html>